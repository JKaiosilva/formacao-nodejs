<%- include ('./partials/header.ejs') %>

<body>
    <%- include ('./partials/navbar.ejs') %>
    <div class="container">
        <hr>
        <h1> <%= pergunta.titulo %> </h1>
        <p> <%= pergunta.descricao %> </p>
        <hr>

        <form method="POST" action="/responder">
            <h3>Responda</h3>
            <label>Resposta</label>
            <textarea name="corpo" class="form-control" placeholder="Digite sua resposta"></textarea>
            <input name="perguntaID" type="hidden" value="<%= pergunta.id %>">
            
            <button type="submit" class="btn btn-primary mt-4">Responder</button>
        </form>

        <hr>
        <h1>Respostas</h1>
        <% respostas.forEach(resposta => { %>
            <div class="card">
                <div class="card-body">
                    <p><%= resposta.corpo %></p>
                </div>
            </div>
            <% }) %>

    </div>
</body>
<%- include ('./partials/footer.ejs') %>
